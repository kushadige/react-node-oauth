<%- include('partials/header') -%>

<h1><%= title %></h1>
<p><%= description %></p>

<% posts.map(post => { %>
    <h2><%= post.title %></h2>
    <p>
        <%= post.content.substring(0, 100) %>...
        <a href="/posts/<%=post.title.toLowerCase()%>">Read more</a>
    </p>
<% }); %>

